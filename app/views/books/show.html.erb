<% if current_user && is_admin?(current_user) %>
<nav class="sub-navigation">
  <a href="<%= edit_book_url(@book) %>">EDIT</a>
  
  <a href="<%= new_book_question_url(@book) %>">+QUESTION</a>
</nav>
<% end %>

<!-- <header class="page-title">Show Book</header> -->

<div class="book">
  <div class="book-cover"><%= image_tag @book.cover.url(:full) %></div>
    <div class="book-title fill-book-title"><%= @book.title %></div>
    <div class="book-author">by <%= @book.author %></div>
    <% if current_user && @book.source %>
    <a class="book-download" href="<%= @book.source %>">Download</a>
    <% end %>
    <div class="book-description"><%= @book.description %></div>
</div>

<div class="page-separator"></div>

<%= render partial: "questions/list_questions", locals: { questions: @book.questions} %>

