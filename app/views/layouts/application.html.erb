<!DOCTYPE html>
<html>
<head>
  <title>Library</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if flash[:error] %>
  <% flash[:error].each do |notice| %>
    <p class="error"><%= notice %></p>
  <% end %>
<% end %>
<% if flash[:alert] %>
  <% flash[:alert].each do |alert| %>
    <p class="alert"><%= alert %></p>
  <% end %>
<% end %>

<nav>
  <% if current_user %>
  <%= current_user.name %>
  <%= button_to "SIGN OUT", session_url, method: :delete %>
  <% else %>
  <a href="<%= new_session_url %>">SIGN IN</a>
  <% end %>

<%= yield %>

</body>
</html>
