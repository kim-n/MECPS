<div class="navigation-wrapper">
  <nav class="navigation group">
    <span class="left-navigation">
      <% if current_user && is_admin?(current_user)%>
      <a href="<%= admin_url %>">Admin</a>
      <% end %>
      <a href="<%= books_url %>">Books</a>
      <a href="<%= users_url %>">Users</a>
    </span>
    <span class="right-navigation">
      <% if current_user %>
        <a href="<%= user_url(current_user) %>"><%= current_user.name %></a>
        <a href="#">N</a>
        <%= button_to "SIGN OUT", session_url, method: :delete %>
      <% else %>
        <a href="<%= new_session_url %>">SIGN IN</a>
      <% end %>
    </span>
  </nav>
</div>