<header class="title">Create User</header>

<form action="<%= create_password_url %>" method="POST" enctype="multipart/form-data">
<input  
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>"
></input>

<input type="hidden" name="activation_token" value="<%= params[:activation_token] %>"></input>

<label>Avatar
<input type="file" name="avatar[file]" value=""></input>
<input type="text" name="avatar[link]" value="" placeholder="o p t i o n a l"></input>
</label>

<label>Email*
<input type="text" name="email" placeholder="r e q u i r e d"></input>
</label>

<label>New Password
<input type="password" name="user[password]" placeholder="r e q u i r e d"></input>
</label>

<label>Retype New Password
<input type="password" name="password_reenter" placeholder="r e q u i r e d"></input>
</label>


<input type="submit" value="New!"></input>
</form>