<% reset_password ||= nil %>

<% if reset_password %>
  <% title = "Reset Password" %>
  <% url = actually_reset_password_url %>
  <% label = "Current password" %>
<% else %>
  <% title = "Complete User" %>
  <% url = activate_url %>
  <% label = "Email" %>
<% end %>

<header class="title"><%= title %></header>

<div class="page-middle">
<form action="<%= url %>" method="POST" enctype="multipart/form-data">  
<input  
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>"
></input>

<% unless reset_password %>
  <input type="hidden" name="activation_token" value="<%= params[:activation_token] %>"></input>

  <label>Avatar
  <input type="file" name="avatar[file]" value=""></input>
  </label>
  <input type="text" name="avatar[link]" value="" placeholder="optional"></input>
  
<% end %>


<label><%= label %>
<input type="text" name="email" placeholder="required"></input>
</label>

<label>New Password
<input type="password" name="user[password]" placeholder="required"></input>
</label>

<label>Retype New Password
<input type="password" name="password_reenter" placeholder="required"></input>
</label>


<input type="submit" value="New!"></input>
</form>

</div>