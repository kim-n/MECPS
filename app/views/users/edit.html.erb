<header class="title">Create User</header>

<form action="<%= user_url(@user) %>" method="POST" enctype="multipart/form-data">
  <input type="hidden" name="_method" action="PUT"></input>
<input  
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>"
></input>


<% if @user.avatar %>
<label>Delete avatar?
  <input type="checkbox" name="delete_avatar" value="1"></input>
</label>
<% else %>
<label>Avatar
<input type="file" name="user[avatar]" value="<%= @user.avatar %>"></input>
</label>
<% end %>

<label>Email*
<input type="text" name="user[email]" value="<%= @user.email %>"></input>
</label>

<label>Name*
<input type="text" name="user[name]" value="<%= @user.name %>"></input>
</label>

<label>Password*
<input type="password" name="user[password]" value=""></input>
</label>

<input type="submit" value="New!"></input>
</form>